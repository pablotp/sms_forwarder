<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_forward_switch"
        android:summary="@string/pref_description_forward"
        android:title="@string/pref_title_forward" />

    <EditTextPreference
        android:inputType="phone"
        android:key="@string/pref_key_phone_number"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_phone_number" />

    <ListPreference
        android:key="@string/pref_key_sim_list"
        android:title="@string/pref_title_sim_list" />
</PreferenceScreen>
